<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/profile_bg">

        <ScrollView
            android:layout_above="@+id/btnLay"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/now_logo">
                    </ImageView>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For Buisness"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:fontFamily="@font/raleway_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Brand Logo &amp; Background"
                        android:fontFamily="@font/raleway_regular"/>

                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:textStyle="normal"
                        android:text="Upload Your Background Cover Image"
                        android:fontFamily="@font/raleway_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="4"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp">
                    <View
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_pink_primary"
                        android:layout_weight="1"/>

                    <View
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_pink_primary"
                        android:layout_weight="1"/>

                    <View
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_pink_primary"
                        android:layout_weight="1"/>

                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_pink_primary"
                        android:layout_weight="1"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_selection_bg"
                            android:adjustViewBounds="true"
                            android:id="@+id/backgroundImageIV"
                            app:riv_corner_radius="5dp"/>

                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Upload Background Cover"
                            android:fontFamily="@font/raleway_regular"/>

                        <RelativeLayout
                            android:id="@+id/btnUploadImage"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/rounder_border_pink"
                            android:layout_width="150dp"
                            android:layout_height="45dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                style="@style/TextAppearance"
                                android:text="Upload"
                                android:fontFamily="@font/raleway_bold"
                                android:textAllCaps="true"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:weightSum="2"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/btnLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/btnBack"
                android:background="@drawable/rounder_border_pink"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    style="@style/TextAppearance"
                    android:text="Back"
                    android:fontFamily="@font/raleway_bold"
                    android:textAllCaps="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/btnNext"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounder_corner_pink"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    style="@style/TextAppearance"
                    android:text="save"
                    android:fontFamily="@font/raleway_bold"
                    android:textAllCaps="true"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>