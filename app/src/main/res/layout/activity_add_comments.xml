<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="#00FFFFFF"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_top_curved_light_blue"
        android:orientation="vertical"
        android:id="@+id/bottomSheetLayout"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"/>
        <include
            android:id="@+id/includeAppBar"
            android:visibility="gone"
            layout="@layout/include_back_app_bar" />

        <com.buzzware.nowapp.spyglass.ui.LockableNestedScrollView
            android:id="@+id/lockableNSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/includeAppBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorPrimaryDark">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentsListRV"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_blue"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        app:layout_constraintBottom_toBottomOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/sendIV"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_baseline_send_24" />

                            <ImageView
                                android:id="@+id/emojiIV"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:padding="@dimen/_4sdp"
                                android:src="@drawable/ic_emoji_stroked" />


                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.buzzware.nowapp.spyglass.ui.RichEditorView
                        android:id="@+id/addCommentField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/add_comment"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </com.buzzware.nowapp.spyglass.ui.LockableNestedScrollView>
    </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
