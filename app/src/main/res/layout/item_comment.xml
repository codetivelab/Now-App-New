<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorPrimaryDark">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/picCIV">

            <ImageView
                android:id="@+id/likeIV"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:src="@drawable/ic_heart_stroke" />

            <TextView
                android:id="@+id/likeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="@dimen/_12ssp"
                android:autoSizeMinTextSize="@dimen/_7ssp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/raleway_regular"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picCIV"
            android:layout_width="@dimen/_35ssp"
            android:layout_height="@dimen/_35ssp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/dummy_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/raleway_extra_bold"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/color_green"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/picCIV"
            app:layout_constraintTop_toTopOf="@+id/picCIV"
            app:layout_constraintWidth_percent="0.6" />

        <TextView
            android:id="@+id/commentTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/raleway_regular"
            android:minHeight="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorLink="@color/blue_color_picker"
            app:layout_constraintBottom_toTopOf="@+id/replyTV"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@+id/picCIV"
            app:layout_constraintTop_toBottomOf="@+id/userNameTV"
            app:layout_constraintWidth_percent="0.6" />

        <TextView
            android:id="@+id/replyTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:ellipsize="end"
            android:fontFamily="@font/raleway_regular"
            android:minHeight="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorLink="@color/blue_color_picker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/picCIV"
            app:layout_constraintWidth_percent="0.6" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/stickerIV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_10sdp"
            android:minHeight="@dimen/_100sdp"
            app:layout_constraintBottom_toTopOf="@+id/replyTV"
            app:layout_constraintStart_toEndOf="@+id/picCIV"
            app:layout_constraintTop_toBottomOf="@+id/userNameTV"
            app:layout_constraintWidth_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>