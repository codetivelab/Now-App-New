<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/profile_bg">

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/now_logo">
                </ImageView>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For Buisness"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:fontFamily="@font/raleway_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Buisness Info"
                    android:fontFamily="@font/raleway_regular"/>

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:text="Tap The Pink Icon To The Right &amp; Drop The Pin Where Your Business Is Located On The Map"
                    android:fontFamily="@font/raleway_regular"/>
            </LinearLayout>

            <LinearLayout
                android:weightSum="4"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="2dp">
                <View
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"/>

                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_pink_primary"
                    android:layout_weight="1"/>

                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"/>

                <View
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"/>
            </LinearLayout>

            <ScrollView
                android:layout_marginTop="@dimen/_40ssp"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/secondTabView"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/addressLay"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounder_corner_text_gray"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:scrollHorizontally="true"
                            android:scrollbars="none"
                            android:layout_marginRight="@dimen/_40ssp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:id="@+id/selectedAddress"
                            android:textColor="@color/text_gray"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textSize="14dp"
                            android:singleLine="true"/>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_right_arrow_angle_text_gray" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/OpenTypeSpinner"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounder_corner_text_gray"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:id="@+id/selectedState"
                            android:textColor="@color/text_gray"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textSize="14dp"
                            android:singleLine="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/citiesSpinner"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounder_corner_text_gray"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City"
                            android:id="@+id/selectedCity"
                            android:textColor="@color/text_gray"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textSize="14dp"
                            android:singleLine="true"/>
                    </RelativeLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_height="wrap_content"
                        android:hint="Zip Code"
                        app:hintTextAppearance="@style/TextLabel"
                        android:textColorHint="@color/text_gray"
                        app:hintTextColor="@color/color_pink_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:textColor="@color/text_gray"
                            android:inputType="text"
                            android:maxLines="1"
                            android:id="@+id/zipCodeET"
                            android:textCursorDrawable="@drawable/cursor_pink"
                            android:textSize="14dp"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_30ssp"
                        android:id="@+id/btnLay"
                        android:layout_alignParentBottom="true"
                        android:weightSum="2"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:id="@+id/btnBack"
                            android:background="@drawable/rounder_border_pink"
                            android:layout_width="match_parent"
                            android:layout_height="45dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                style="@style/TextAppearance"
                                android:textStyle="bold"
                                android:text="Back"
                                android:fontFamily="@font/raleway_bold"
                                android:textAllCaps="true"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:id="@+id/btnNext"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/rounder_corner_pink"
                            android:layout_width="match_parent"
                            android:layout_height="45dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                style="@style/TextAppearance"
                                android:textStyle="bold"
                                android:text="Next"
                                android:fontFamily="@font/raleway_bold"
                                android:textAllCaps="true"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</layout>