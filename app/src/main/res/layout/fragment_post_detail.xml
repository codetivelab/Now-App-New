<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/profile_bg"
    tools:context=".Fragments.UserFragments.PostDetailFragment">

    <RelativeLayout
        android:id="@+id/header"
        android:background="@drawable/ic_profile_bg"
        android:layout_width="match_parent"
        android:layout_height="245dp">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/back_icon"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/rounder_circle_green">
                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="Online Now"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_edit"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/top"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2">

                <RelativeLayout
                    android:id="@+id/profileLay"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="110dp"
                    android:layout_height="110dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dummy_user"/>

                    <RelativeLayout
                        android:background="@drawable/rounder_circle_light_blue_stoke"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_width="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="20dp">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_diamond"/>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="05dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:layout_below="@+id/profileLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textAllCaps="true"
                        android:text="PLATINIUM"
                        android:singleLine="true"
                        android:textColor="@color/text_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textAllCaps="true"
                        android:text="Nower"
                        android:letterSpacing="0.5"
                        android:textColor="@color/text_gray"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="In Bogota Colomboa Now"
                        android:textSize="10dp"/>

                    <TextView
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_green"
                        android:text="John Doe"
                        android:textStyle="bold"
                        android:textSize="18dp"/>

                    <TextView
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Graphic Designer"
                        android:textStyle="italic"
                        android:textSize="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/one"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_pin"/>

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="105"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                            <TextView
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:text="Place Visited"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/two"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_pin"/>

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="80"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                            <TextView
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_gray"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:text="Place Rated"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
                        android:layout_marginTop="5dp"
                        android:id="@+id/progress_bar_1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:indeterminate="false"
                        android:maxHeight="10dp"
                        android:minHeight="10dp"
                        android:progress="40"
                        app:backgroundColor="@color/darkblackk"
                        app:progressColor="@color/lightgrayy"/>

                    <RelativeLayout
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_alignParentLeft="true"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:text="150 Points"/>

                        <TextView
                            android:layout_alignParentRight="true"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:text="Next Level"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dummy_post_image"
                    android:scaleType="fitXY"
                    app:riv_corner_radius_top_left="20dp"
                    app:riv_corner_radius_top_right="20dp" />


                <RelativeLayout
                    android:background="@drawable/rounder_corner_light_blue_two_bottom_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:textSize="12dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_gray"
                        android:textStyle="normal"
                        android:maxLines="6"
                        android:fontFamily="@font/raleway_regular"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>