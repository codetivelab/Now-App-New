<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounder_corner_light_blue"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp">

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you enjoying our app?"
            android:textColor="@color/color_green"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="@font/raleway_semibold"
            android:singleLine="true"
            android:textAlignment="center"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So, rate now and help us to be better"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textSize="10dp"
            android:fontFamily="@font/raleway_regular"
            android:singleLine="true"
            android:textAlignment="center"/>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_gravity="center"
            android:layout_below="@+id/czxnm"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:maxHeight="20dp"
            android:id="@+id/userRating"
            android:layout_marginTop="5dp"
            android:rating="1"
            app:mrb_progressBackgroundTint="@color/text_gray"
            app:mrb_progressTint="@color/text_gray"
            app:mrb_secondaryProgressTint="@color/text_gray"
            style="@style/Widget.MaterialRatingBar.RatingBar"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnCancel"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentRight="true"
        android:layout_width="35dp"
        android:layout_height="35dp">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/ic_cancel"/>
    </RelativeLayout>
</RelativeLayout>